//Largest Element in Array in C

#include<stdio.h>

void largestelement(int*arr,int n){
int max=-99999;

for(int i=0;i<n;i++){
  if(arr[i]>max){
    max=arr[i];
  }
}

printf("The maximum element :%d",max);

}

int main(){

int n;
printf("enter the array size");
scanf("%d",&n);

int arr[n];
printf("enter the array:");
  for(int i=0;i<n;i++){
    scanf("%d",&arr[i]);
}

largestelement(arr,n);

return 0;

}
